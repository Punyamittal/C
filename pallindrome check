#include <stdio.h>
#include <string.h>
void main(){
    printf("enter the string:");
    char r[50];
    char s[50];
    scanf("%s",r);
    int m=strlen(r);
    s[m] = '\0';
    printf("the reversed string is:");
    for (int i=0;i<m;i++) {
        s[i] = r[m-1-i];
    }
    if(s==r){
        printf("it is a palindrome");
        
    }
    else{
        printf("it is not a palindrome");
    }
}
